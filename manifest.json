{
  "name": "Markdown Previewer",
  "description" : "Can preview markdown in GitLab",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": [
    "declarativeContent"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["https://gitlab.kkinternal.com/*"],
      "js": ["libs/jquery-3.5.1.min.js", "markdown_previewer.js"],
      "css": ["markdown_previewer.css"],
      "run_at": "document_end"
    }
  ]
}
